# =============================================================================
# 5ML Agentic AI Platform v1 - Environment Variables
# =============================================================================

# Required API Keys
ANTHROPIC_API_KEY=sk-ant-xxxxx
DEEPSEEK_API_KEY=sk-xxxxx

# Optional API Keys
PERPLEXITY_API_KEY=pplx-xxxxx
OPENAI_API_KEY=sk-xxxxx

# Database
# Local development:
# DATABASE_URL=postgresql://user:pass@localhost:5432/5ml_platform
# Fly.io production (use fly secrets set):
DATABASE_URL=postgresql://postgres:password@5ml-ageticai-db.flycast:5432/5ml_agenticai

# Receipt Processing
DROPBOX_ACCESS_TOKEN=sl.xxxxx
OCR_MAX_TOKENS=2048
EXCEL_OUTPUT_DIR=/tmp/excel-exports

# Server
PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# GitHub Webhook (Optional)
GITHUB_WEBHOOK_SECRET=your-webhook-secret
