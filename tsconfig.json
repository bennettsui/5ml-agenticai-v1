{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "tools/**/*.ts",
    "infrastructure/**/*.ts",
    "use-cases/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "frontend"
  ]
}
